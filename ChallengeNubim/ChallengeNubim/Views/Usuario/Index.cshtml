@model ChallengeNubim.Models.UsuarioModel
@{
    ViewBag.Title = "Usuario";
}

@section scripts {
    <script src="~/Scripts/Controller/Usuario.js"></script>

}


<h2>Usuario</h2>

<div style="margin: 10px">
    <a class="btn btn-default" id="agregarItem"
       data-toggle="modal" data-target="#modalAgregarItem" onClick="GetById(0);"><i class="fa fa-plus"></i>Agregar</a>
</div>
<div>
    <table id="tblUsuarios" class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo electronico</th>
                <th>Pais</th>
                <th>&nbsp;</th>
            </tr>
        </thead>

    </table>
</div>

<!-- Modal agregar / editar -->
<div class="modal fade" id="modalAgregarItem" tabindex="-1" role="dialog" aria-labelledby="modalAgregarItem">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("AddOrEdit")
            </div>
        </div>
    </div>
</div>

<!-- Modal borrar -->
<div class="modal fade" id="modalBorrarItem" tabindex="-1" role="dialog" aria-labelledby="modalAgregarItem">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div>
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        Confirma la eliminacion del registro?
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="hidden" id="hdnEliminarItem" />
                        <button class="btn btn-primary" onclick="DeleteItem();">Eliminar</button>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>


