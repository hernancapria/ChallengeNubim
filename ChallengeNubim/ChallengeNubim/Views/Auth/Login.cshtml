@model ChallengeNubim.Models.UsuarioModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Ingresar credenciales</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true);
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Html.LabelFor(model => model.email, "Email", new { @class = "control-label" })
        @Html.TextBoxFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.password, new { @class = "control-label" })
        @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <br />
    <button>Ingresar</button>
}
<div class="text-danger">
    @TempData["mensaje"]
</div>

