@model ChallengeNubim.Models.PaisModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script src="~/Scripts/Controller/Pais.js"></script>

}
<h2>Paises</h2>


<div style="margin: 10px">
    <a class="btn btn-default" id="agregarItem"
       data-toggle="modal" data-target="#modalAgregarItem" onClick="GetById(0);"><i class="fa fa-plus"></i>Agregar</a>
</div>
<div>
    <table id="tblPaises" class="table table-striped">
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>&nbsp;</th>
            </tr>
        </thead>

    </table>
</div>

<!-- Modal agregar / editar -->
<div class="modal fade" id="modalAgregarItem" tabindex="-1" role="dialog" aria-labelledby="modalAgregarItem">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Pais</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("AddOrEdit")
            </div>
        </div>
    </div>
</div>

<!-- Modal borrar -->
<div class="modal fade" id="modalBorrarItem" tabindex="-1" role="dialog" aria-labelledby="modalAgregarItem">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div>
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Pais</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        Confirma la eliminacion del registro?
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="hidden" id="hdnEliminarItem" />
                        <button class="btn btn-primary" onclick="DeleteItem();">Eliminar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


