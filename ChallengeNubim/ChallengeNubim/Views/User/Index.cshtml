@model List<User>
@{
    ViewBag.Title = "Usuario";
}

<h2>Usuario</h2>

<div style="margin: 10px">
    <a class="btn btn-default" id="agregarItem"
       data-toggle="modal" data-target="#modalAgregarItem"><i class="fa fa-plus"></i>Agregar</a>
</div>
<div>
    <table id="tblUsuarios" class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo electronico</th>
                <th>&nbsp;</th>
            </tr>
        </thead>

    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="modalAgregarItem" tabindex="-1" role="dialog" aria-labelledby="modalAgregarItem">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
            </div>
        </div>
    </div>
</div>


<link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" />
<link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

@section scripts {
    <script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/Controller/Usuario.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
}